<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--原材料批次-->
        <record id="view_form_material_barch" model="ir.ui.view">
            <field name="name">Material Barch</field>
            <field name="model">material.barch</field>
            <field name="arch" type="xml">
                <form string="Material Barch" version="7.0">
                    <sheet>
                        <h1>No.
                            <field name="code"/>
                        </h1>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="materia_id"/>
                                <field name="commodity_barch_id"/>
                                <field name="production_date"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="barch"/>
                                <field name="supplier_id"/>
                                <field name="messages"/>
                                <field name="date_confirm"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--商品批次-->
        <record id="view_form_commodity_barch" model="ir.ui.view">
            <field name="name">Commodity Barch</field>
            <field name="model">commodity.barch</field>
            <field name="arch" type="xml">
                <form string="Commodity Barch" version="7.0">
                    <sheet>
                        <h1>No.
                            <field name="code" class="oe_inline" />
                        </h1>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="commodity_id"/>
                                <field name="production_date"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="barch"/>
                                <field name="supplier_id"/>
                                <field name="messages"/>
                                <field name="date_confirm"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="页卡">
                                <field name="material_barch_id">
                                    <tree string="明细" editable="bottom">
                                        <field name="barch" widget="handle"/>
                                        <field name="name" widget="handle"/>
                                        <field name="materia_id" widget="handle"/>
                                        <field name="supplier_id" widget="handle"/>
                                        <field name="production_date" widget="handle"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
