<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="fwxt_decrypt_view" model="ir.ui.view">
            <field name="name">fwxt.decrypt.form</field>
            <field name="model">fwxt.decrypt</field>
            <field name="arch" type="xml">
                <form string="fwxt.decrypt">
                    <p class="fwxt decrypt">
                        防伪解密
                    </p>
                    <h1>
                        条形码<field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="decrypt_code"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group>
                        <button string="解密" name="btn_decrypt" type="object" class="oe_highlight"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_tree_fwxt_decrypt" model="ir.ui.view">
            <field name="name">fwxt.decrypt.tree</field>
            <field name="model">fwxt.decrypt</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="decrypt_code"/>
                </tree>
            </field>
        </record>


        <!--  窗体事件 查询  Search  graph,gantt-->
        <record id="action_fwxt_decrypt" model="ir.actions.act_window">
            <field name="name">fwxt.decrypt.actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fwxt.decrypt</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    条码二维码生成工具
                </p>
            </field>
        </record>

        <menuitem name="解密" id="menu_four_create" parent="menu_two_create" action="action_fwxt_decrypt" sequence="2"/>
    </data>
</openerp>
