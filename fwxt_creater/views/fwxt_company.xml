<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_form_fwxt_company" model="ir.ui.view">
            <field name="name">fwxt.company.form</field>
            <field name="model">fwxt.company</field>
            <field name="arch" type="xml">
                <form string="Form" version="7.0">
                    <sheet>
                        <h1>
                            编号<field name="code"/>
                        </h1>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_code"/>
                                <field name="messages"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="date_confirm"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_fwxt_company" model="ir.ui.view">
            <field name="name">fwxt.company.tree</field>
            <field name="model">fwxt.company</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="company_code"/>
                    <field name="user_id"/>
                    <field name="date_confirm"/>
                </tree>
            </field>
        </record>


        <record id="view_search_fwxt_company" model="ir.ui.view">
            <field name="name">fwxt.company.search</field>
            <field name="model">fwxt.company</field>
            <field name="arch" type="xml">
                <search string="查询">
                    <field name="code"/>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <!--  窗体事件 查询  Search  graph,gantt-->
        <record id="action_fwxt_company" model="ir.actions.act_window">
            <field name="name">fwxt.company.actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fwxt.company</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    条码二维码生成工具
                </p>
            </field>
        </record>

        <menuitem name="客户管理" id="menu_two_company" parent="menu_one_create" sequence="2"/>
        <menuitem name="客户管理" id="menu_three_company" parent="menu_two_company" action="action_fwxt_company" sequence="1"/>


    </data>
</openerp>
