    <data>

        <!--字典管理-->
        <record id="view_filter_dict_info" model="ir.ui.view">
            <field name="name">dict.info.search</field>
            <field name="model">dict.info</field>
            <field name="arch" type="xml">
                <search string="search">
                    <field name="code" string="Code" filter_domain="[('code','ilike',self)]"/>
                    <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                    <separator/>
                    <group expand="0" string="Group">
                        <filter string="type" domain="[]" context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>

